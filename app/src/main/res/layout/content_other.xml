<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Views.Other"
    tools:showIn="@layout/app_bar_other"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="10dp">
                <Button
                    android:layout_width="35dp"
                    android:layout_margin="15dp"
                    android:layout_height="35dp"
                    android:background="@color/colorWhite"
                    android:drawableLeft="@drawable/edit_red"
                    android:layout_marginBottom="10dp"
                    android:padding="5dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text26"
                    android:textColor="@color/colorWhite"
                    android:fontFamily="@font/cairo_regular"
                    android:textSize="20dp"
                    android:layout_marginLeft="120dp"
                    android:layout_marginRight="0dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text27"
                    android:layout_marginTop="50dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginLeft="105dp"
                    android:textSize="15dp"
                    android:textColor="@color/colorWhite"
                    android:fontFamily="@font/cairo_regular"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text28"
                    android:textColor="@color/colorWhite"
                    android:textSize="15dp"
                    android:fontFamily="@font/cairo_regular"
                    android:layout_marginTop="90dp"
                    android:layout_marginLeft="210dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="000000"
                    android:fontFamily="@font/cairo_regular"
                    android:layout_marginLeft="140dp"
                    android:layout_marginTop="90dp"
                    android:textSize="15dp"
                    android:textColor="@color/colorYellow"/>
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="300dp"
                    android:background="@drawable/white_button"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorWhite"
                    android:layout_marginTop="125dp"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/cairo_regular"
                    android:textColor="@color/colorWhite"
                    android:textSize="20dp"
                    android:layout_margin="5dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="@string/hint1"
                    android:textSize="20dp"
                    android:fontFamily="@font/cairo_regular"
                    android:layout_margin="5dp"
                    android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/cairo_regular"
                    android:textColor="@color/colorWhite"
                    android:textSize="20dp"
                    android:layout_margin="5dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="@string/hint2"
                    android:textSize="20dp"
                    android:fontFamily="@font/cairo_regular"
                    android:layout_margin="5dp"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/cairo_regular"
                    android:textColor="@color/colorWhite"
                    android:textSize="20dp"
                    android:layout_margin="5dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="@string/Topic"
                    android:textSize="20dp"
                    android:fontFamily="@font/cairo_regular"
                    android:layout_margin="5dp"
                    android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/btn4"
                    android:fontFamily="@font/cairo_regular"
                    android:background="@drawable/round_button"
                    android:layout_margin="20sp"
                    android:textColor="@color/colorPrimary"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/cairo_regular"
                    android:textColor="@color/colorWhite"
                    android:textSize="20sp"
                    android:layout_margin="5dp"
                    android:textColorHint="@color/colorWhite"
                    android:layout_marginRight="30dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/text9"
                    android:gravity="center"
                    android:fontFamily="@font/cairo_regular"
                    android:textSize="20dp"/>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>




</LinearLayout>