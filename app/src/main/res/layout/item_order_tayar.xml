<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="10dp"
    android:layout_margin="16dp"
    card_view:cardUseCompatPadding="true"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#fff">
        <TextView
            android:id="@+id/OrderRequest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_add_shopping_cart_black_24dp"
            android:drawablePadding="5dp"
            android:fontFamily="@font/cairo_regular"
            android:singleLine="true"
            android:textColor="@color/description_color_intro"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="16sp"
            android:inputType="textMultiLine"
            android:textDirection="rtl"/>
        <TextView
            android:id="@+id/CustomerRequest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_person_outline_black_24dp"
            android:drawablePadding="5dp"
            android:fontFamily="@font/cairo_regular"
            android:singleLine="true"
            android:textColor="@color/description_color_intro"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="16sp"
            android:inputType="textMultiLine"
            android:textDirection="rtl"/>
        <TextView
            android:id="@+id/TypeRequest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_youtube_searched_for_black_24dp"
            android:drawablePadding="5dp"
            android:fontFamily="@font/cairo_regular"
            android:singleLine="true"
            android:textColor="@color/description_color_intro"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="16sp"
            android:inputType="textMultiLine"
            android:textDirection="rtl"/>
        <TextView
            android:id="@+id/LocationRequest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_location_on_black_24dp"
            android:drawablePadding="5dp"
            android:fontFamily="@font/cairo_regular"
            android:singleLine="true"
            android:textColor="@color/description_color_intro"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="16sp"
            android:inputType="textMultiLine"
            android:textDirection="rtl"
            />
        <TextView
            android:id="@+id/TimeRequest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_access_time_black_24dp"
            android:drawablePadding="5dp"
            android:fontFamily="@font/cairo_regular"
            android:singleLine="true"
            android:textColor="@color/description_color_intro"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="16sp"
            android:textDirection="rtl"
            />
        <TextView
            android:id="@+id/PhoneRequest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_smartphone_black_24dp"
            android:drawablePadding="5dp"
            android:fontFamily="@font/cairo_regular"
            android:singleLine="true"
            android:textColor="@color/description_color_intro"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="16sp"
            android:textDirection="rtl"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/Delete_DeliveryRequest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_delete_black_24dp"
                android:drawablePadding="5dp"
                android:layout_alignParentLeft="true"
                android:fontFamily="@font/cairo_semi_bold"
                android:singleLine="true"
                android:textColor="#000"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textSize="18sp"
                android:textDirection="rtl"
                android:text="الغاء الطلب"
                android:padding="3dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="10dp"
                />
            <TextView
                android:id="@+id/Update_DeliveryRequest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/ic_update_black_24dp"
                android:fontFamily="@font/cairo_semi_bold"
                android:gravity="right"
                android:singleLine="true"
                android:text="تعديل الطلب"
                android:textColor="#000"
                android:textDirection="rtl"
                android:textSize="18sp"
                android:layout_marginEnd="10dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/MapRequest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_map_black_24dp"
            android:drawablePadding="5dp"
            android:layout_alignParentLeft="true"
            android:fontFamily="@font/cairo_semi_bold"
            android:singleLine="true"
            android:textColor="#000"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="18sp"
            android:textDirection="rtl"
            android:text="الخريطه"
            android:padding="3dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="10dp"
            />
        <TextView
            android:id="@+id/MakanRequest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/ic_home_black_24dp"
            android:fontFamily="@font/cairo_semi_bold"
            android:gravity="right"
            android:singleLine="true"
            android:text="المكان"
            android:textColor="#000"
            android:textDirection="rtl"
            android:textSize="18sp"
            android:layout_marginEnd="10dp"/>
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
