<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="10dp"
    android:layout_margin="16dp"
    card_view:cardUseCompatPadding="true"
    android:background="#fff"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#fff">
        <TextView
            android:id="@+id/Person"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_person_outline_black_24dp"
            android:drawablePadding="5dp"
            android:fontFamily="@font/cairo_regular"
            android:singleLine="true"
            android:textColor="@color/description_color_intro"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="16sp"
            android:inputType="textMultiLine"
            android:textDirection="rtl"/>
        <TextView
            android:id="@+id/Phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_smartphone_black_24dp"
            android:drawablePadding="5dp"
            android:fontFamily="@font/cairo_regular"
            android:singleLine="true"
            android:textColor="@color/description_color_intro"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="16sp"
            android:textDirection="rtl"
            />
        <TextView
            android:id="@+id/Location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_location_on_black_24dp"
            android:drawablePadding="5dp"
            android:fontFamily="@font/cairo_regular"
            android:singleLine="true"
            android:textColor="@color/description_color_intro"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="16sp"
            android:inputType="textMultiLine"
            android:textDirection="rtl"
            />

    </LinearLayout>
</android.support.v7.widget.CardView>
