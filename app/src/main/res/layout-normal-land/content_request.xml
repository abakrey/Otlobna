<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/CustomerName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="@dimen/content_request_customer_name_margin_left"
                    android:layout_marginTop="@dimen/content_request_customer_name_margin_top"
                    android:layout_marginRight="@dimen/content_request_customer_name_margin_rigt"
                    android:layout_toLeftOf="@id/CustomerNameView"
                    android:fontFamily="@font/cairo_regular"
                    android:gravity="center|right"
                    android:text=""
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/content_request_customer_name_txt_size" />

                <TextView
                    android:id="@+id/CustomerNameView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="@dimen/content_request_customer_title_margin_top"
                    android:layout_marginRight="@dimen/content_request_customer_title_margin_rigt"
                    android:layout_marginBottom="2dp"
                    android:fontFamily="@font/cairo_regular"
                    android:gravity="center|right"
                    android:padding="@dimen/content_request_customer_title_padding"
                    android:text="@string/text8"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/content_request_customer_title_size" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/CustomerAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="@dimen/content_request_customer_address_content_margin_left"
                    android:layout_marginRight="@dimen/content_request_customer_address_content_margin_right"
                    android:layout_toLeftOf="@id/CustomerAddressView"
                    android:fontFamily="@font/cairo_regular"
                    android:gravity="center|right"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/content_request_customer_address_content_size" />

                <TextView
                    android:id="@+id/CustomerAddressView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/content_request_customer_address_title_margin_right"
                    android:fontFamily="@font/cairo_regular"
                    android:gravity="center"
                    android:padding="@dimen/content_request_customer_address_title_padding"
                    android:text="@string/text9"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/content_request_customer_address_title_size" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/orderPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/content_request_customer_phone_title_margin_right"
                    android:fontFamily="@font/cairo_regular"
                    android:gravity="center"
                    android:padding="@dimen/content_request_customer_phone_title_padding"
                    android:text="سعر الطلب :"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/content_request_customer_phone_title_txt_size" />

                <EditText
                    android:id="@+id/orPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="@dimen/content_request_customer_phone_margin_left"
                    android:layout_marginRight="190dp"
                    android:fontFamily="@font/cairo_regular"
                    android:gravity="center|right"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/content_request_customer_phone_txt_size"
                    android:inputType="numberDecimal"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tayarPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/content_request_customer_phone_title_margin_right"
                    android:fontFamily="@font/cairo_regular"
                    android:gravity="center"
                    android:padding="@dimen/content_request_customer_phone_title_padding"
                    android:text="سعر الطيار :"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/content_request_customer_phone_title_txt_size" />

                <EditText
                    android:id="@+id/tyPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="@dimen/content_request_customer_phone_margin_left"
                    android:layout_marginRight="190dp"
                    android:fontFamily="@font/cairo_regular"
                    android:gravity="center|right"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/content_request_customer_phone_txt_size"
                    android:inputType="numberDecimal"/>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/CustPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="@dimen/content_request_customer_price_margin_left"
                    android:layout_marginRight="150dp"
                    android:fontFamily="@font/cairo_regular"
                    android:gravity="center|right"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/content_request_customer_price_txt_size" />

                <TextView
                    android:id="@+id/CustomerPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/content_request_customer_price_title_margin_right"
                    android:fontFamily="@font/cairo_regular"
                    android:gravity="center"
                    android:padding="@dimen/content_request_customer_price_title_padding"
                    android:text="@string/text10"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/content_request_customer_price_title_txt_size" />
            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_weight="1"
                        android:id="@+id/details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginLeft="@dimen/content_request_customer_price_margin_left"
                        android:layout_marginRight="@dimen/content_request_customer_price_margin_right"
                        android:fontFamily="@font/cairo_regular"
                        android:gravity="center|right"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/content_request_customer_price_txt_size" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginRight="@dimen/content_request_arrival_time_margin_right"
                        android:fontFamily="@font/cairo_regular"
                        android:gravity="center|right"
                        android:padding="@dimen/content_request_arrival_time_padding"
                        android:text="@string/details"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/content_request_arrival_time_size" />
                </LinearLayout>

                <Button
                    android:id="@+id/Order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/content_request_order_now_margin_top"
                    android:layout_marginBottom="@dimen/content_request_order_now_margin_bottom"
                    android:background="@drawable/red_button"
                    android:fontFamily="@font/cairo_bold"
                    android:padding="@dimen/content_request_order_now_padding"
                    android:text="@string/text18" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>